{
  "environments": {
    "dev": {
      "name": "Development",
      "s3Bucket": "gamedin-dev",
      "cloudFrontDistribution": "",
      "domain": "",
      "region": "us-east-1",
      "buildConfig": {
        "environment": "development",
        "sourcemap": true,
        "minify": false,
        "compress": false
      },
      "features": {
        "analytics": false,
        "monitoring": false,
        "debugMode": true,
        "mockData": true
      },
      "security": {
        "corsOrigins": ["http://localhost:3000", "http://localhost:5173"],
        "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:;",
        "headers": {
          "X-Frame-Options": "DENY",
          "X-Content-Type-Options": "nosniff",
          "Referrer-Policy": "strict-origin-when-cross-origin"
        }
      }
    },
    "staging": {
      "name": "Staging",
      "s3Bucket": "gamedin-staging",
      "cloudFrontDistribution": "",
      "domain": "",
      "region": "us-east-1",
      "buildConfig": {
        "environment": "staging",
        "sourcemap": false,
        "minify": true,
        "compress": true
      },
      "features": {
        "analytics": true,
        "monitoring": true,
        "debugMode": false,
        "mockData": false
      },
      "security": {
        "corsOrigins": ["https://gamedin-staging.yourdomain.com"],
        "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:;",
        "headers": {
          "X-Frame-Options": "DENY",
          "X-Content-Type-Options": "nosniff",
          "Referrer-Policy": "strict-origin-when-cross-origin",
          "Strict-Transport-Security": "max-age=31536000; includeSubDomains"
        }
      }
    },
    "prod": {
      "name": "Production",
      "s3Bucket": "gamedin-prod",
      "cloudFrontDistribution": "",
      "domain": "",
      "region": "us-east-1",
      "buildConfig": {
        "environment": "production",
        "sourcemap": false,
        "minify": true,
        "compress": true
      },
      "features": {
        "analytics": true,
        "monitoring": true,
        "debugMode": false,
        "mockData": false
      },
      "security": {
        "corsOrigins": ["https://gamedin.com", "https://www.gamedin.com"],
        "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; frame-ancestors 'none'; base-uri 'self';",
        "headers": {
          "X-Frame-Options": "DENY",
          "X-Content-Type-Options": "nosniff",
          "Referrer-Policy": "strict-origin-when-cross-origin",
          "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
          "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
        }
      }
    }
  },
  "deployment": {
    "aws": {
      "region": "us-east-1",
      "cloudFormationStack": "gamedin-infrastructure",
      "cloudWatchLogGroup": "/aws/lambda/gamedin-deployment"
    },
    "github": {
      "repository": "your-username/gamedin",
      "branch": "main",
      "workflow": "deploy-s3.yml"
    },
    "notifications": {
      "slack": {
        "webhookUrl": "",
        "channel": "#deployments"
      },
      "email": {
        "recipients": [],
        "sender": "deployments@gamedin.com"
      }
    }
  },
  "monitoring": {
    "cloudWatch": {
      "enabled": true,
      "metrics": [
        "CloudFrontRequests",
        "CloudFrontBytesDownloaded",
        "CloudFrontErrorRate",
        "S3BucketSize"
      ],
      "alarms": {
        "highErrorRate": {
          "threshold": 5,
          "period": 300,
          "evaluationPeriods": 2
        },
        "highLatency": {
          "threshold": 1000,
          "period": 300,
          "evaluationPeriods": 2
        }
      }
    },
    "sentry": {
      "enabled": true,
      "dsn": "",
      "environment": "production"
    }
  },
  "cache": {
    "cloudFront": {
      "defaultTTL": 86400,
      "maxTTL": 31536000,
      "compress": true,
      "forwardedHeaders": []
    },
    "s3": {
      "versioning": true,
      "lifecycleRules": {
        "deleteOldVersions": {
          "enabled": true,
          "days": 30
        }
      }
    }
  }
} 