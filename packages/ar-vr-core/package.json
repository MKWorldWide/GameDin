{
  "name": "@gamedin/ar-vr-core",
  "version": "0.1.0",
  "description": "Core AR/VR functionality for GameDin platform",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist/types",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.155.0"
  },
  "dependencies": {
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^9.2.0",
    "@react-three/rapier": "^2.0.0",
    "@react-three/xr": "^5.0.2",
    "zustand": "^4.5.0",
    "immer": "^10.0.0",
    "three": "^0.155.0"
  },
  "devDependencies": {
    "@types/three": "^0.155.0",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.3.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "@types/jest": "^29.5.0",
