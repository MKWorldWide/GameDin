{
  "name": "gamedin.xyz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cd frontend && vite",
    "build": "cd frontend && tsc && vite build",
    "preview": "cd frontend && vite preview",
    "test": "jest --config frontend/config/jest.config.js",
    "test:watch": "jest --watch --config frontend/config/jest.config.js",
    "test:coverage": "jest --coverage --config frontend/config/jest.config.js",
    "test:e2e": "cypress run --config-file frontend/config/cypress.config.ts",
    "test:e2e:open": "cypress open --config-file frontend/config/cypress.config.ts",
    "test:backend": "jest --config backend/config/jest.config.integration.js",
    "lint": "eslint frontend/src --ext .ts,.tsx --config frontend/config/.eslintrc.json",
    "lint:fix": "eslint frontend/src --ext .ts,.tsx --config frontend/config/.eslintrc.json --fix",
    "format": "prettier --write \"frontend/src/**/*.{ts,tsx,css,md}\" --config frontend/config/.prettierrc",
    "typecheck": "tsc --noEmit --project frontend/config/tsconfig.json",
    "prepare": "husky install",
    "deploy": "powershell -ExecutionPolicy Bypass -File scripts/deployment/deploy.ps1",
    "rollback": "powershell -ExecutionPolicy Bypass -File scripts/deployment/rollback.ps1",
    "clean": "rimraf **/node_modules **/build **/dist **/.next .serverless",
    "analyze": "cd frontend && vite build --mode analyze",
    "generate:api": "amplify codegen",
    "validate": "npm-run-all --parallel typecheck lint test test:backend"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^5.0.0",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "aws-amplify": "^5.0.0",
    "classnames": "^2.3.0",
    "date-fns": "^2.30.0",
    "graphql": "^16.7.0",
    "launchdarkly-js-client-sdk": "^3.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.14.0",
    "tailwindcss": "^3.3.0",
    "zod": "^3.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.4.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^29.7.0",
    "cypress": "^12.14.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0",
    "vite-plugin-analyze": "^0.7.0"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx}": [
      "eslint --fix --config frontend/config/.eslintrc.json",
      "prettier --write --config frontend/config/.prettierrc"
    ],
    "frontend/src/**/*.{css,md}": "prettier --write --config frontend/config/.prettierrc"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  }
}
