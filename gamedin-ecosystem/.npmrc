# Enable strict peer dependencies
strict-peer-dependencies=false

# Use the workspace protocol for linking local packages
save-workspace-protocol=true

# Use the workspace protocol for all dependencies
workspace-protocol=workspace:

# Ensure consistent dependency versions
prefer-workspace-packages=true

# Enable parallel installation of dependencies
prefer-frozen-lockfile=true

# Use the default registry
registry=https://registry.npmjs.org/

# Enable package lock file version 6
package-lock-version=3

# Set the node-linker to hoisted to reduce disk space usage
node-linker=hoisted

# Enable strict SSL for all requests
strict-ssl=true

# Set the cache directory
cache=.npm-cache

# Set the logs directory
logs-dir=logs

# Set the package lock file name
package-lock=true

# Enable package lock file version 3
package-lock-only=false

# Enable package lock file version 3
