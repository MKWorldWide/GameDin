{
  "name": "@gamedin/chat",
  "version": "0.1.0",
  "description": "GameDin Chat Service - Real-time chat functionality for GameDin platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.ts\" \"**/*.tsx\"",
    "clean": "rimraf dist coverage .turbo",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@gamedin/shared": "workspace:*",
    "@socket.io/redis-adapter": "^8.2.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.0.0",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.0.0",
    "socket.io-client": "^4.7.2",
    "supertest": "^6.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
