{
  "name": "@gamedin/onboarding",
  "version": "0.1.0",
  "description": "GameDin Onboarding Service - User onboarding and account setup for GameDin platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.ts\" \"**/*.tsx\"",
    "clean": "rimraf dist coverage .turbo",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@gamedin/shared": "workspace:*",
    "@types/node": "^20.0.0",
    "bcryptjs": "^2.4.3",
    "crypto-random-string": "^5.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "nanoid": "^5.0.3",
    "pino": "^8.17.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-random-string": "^2.0.3",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.5.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
