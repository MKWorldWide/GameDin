# ===================================
# üéÆ GameDin - Environment Configuration
# ===================================
# Copy this file to .env and update the values as needed.
# Keep this file in version control but NEVER commit .env files with real secrets.

# ================
# üèó  Application
# ================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api
CORS_ORIGIN=*
LOG_LEVEL=info
APP_NAME=GameDin
APP_VERSION=0.1.0
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
NODE_OPTIONS=--max-old-space-size=4096

# ================
# üîê Authentication
# ================
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=30d
PASSWORD_RESET_EXPIRES_IN=1h
SALT_ROUNDS=10
COOKIE_SECRET=your-cookie-secret-here
SESSION_SECRET=your-session-secret-here

# ================
# üíæ Database
# ================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/gamedin?schema=public
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# ================
# üìß Email
# ================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false # true for 465, false for other ports
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@gamedin.com
SMTP_FROM_NAME="GameDin"

# ================
# üîÑ External Services
# ================

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Storage
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_BUCKET_NAME=your-s3-bucket
S3_REGION=us-east-1
S3_ENDPOINT= # Leave empty for AWS S3

# LLM Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ================
# ‚öôÔ∏è Feature Flags
# ================
ENABLE_LLM_MODERATION=false
ENABLE_INVITE_FLOW=false
ENABLE_REDIS_CLUSTER=false
ENABLE_MAINTENANCE_MODE=false
ENABLE_RATE_LIMITING=true
ENABLE_SOCIAL_LOGIN=true

# ================
# üìä Monitoring & Analytics
# ================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ================
# üöÄ Deployment
# ================
# Set these in your production environment
# NODE_ENV=production
# DATABASE_URL=your-production-db-url
# REDIS_URL=your-production-redis-url
# etc.
